{
	"name": "transcoder",
	"scripts": {
		"build": "webpack --config webpack.config.js --mode production && npm run build:blocks",
		"build:assets": "webpack --config webpack.config.js --mode production",
		"start": "npm-run-all --parallel start:*",
		"create:block": "./bin/block-scaffold/block.js",
		"start:blocks": "wp-scripts start --config ./node_modules/@wordpress/scripts/config/webpack.config.js --webpack-src-dir=./assets/src/blocks/ --output-path=./assets/build/blocks/",
		"build:blocks": "wp-scripts build --config ./node_modules/@wordpress/scripts/config/webpack.config.js --webpack-src-dir=./assets/src/blocks/ --output-path=./assets/build/blocks/ --mode production",
		"test": "npm-run-all --parallel test:*",
		"test:js": "wp-scripts test-unit-js --config=tests/js/jest.config.js --passWithNoTests",
		"test:js:watch": "npm run test:js -- --watch",
		"lint": "npm-run-all --parallel lint:*",
		"lint:js": "wp-scripts lint-js ./assets/src",
		"lint:js:fix": "npm run lint:js -- --fix ./assets/src"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^7.7.0",
		"@wordpress/icons": "10.13.0",
		"clsx": "2.1.1",
		"video.js": "^8.19.1",
		"videojs-contrib-dash": "^5.1.1",
		"videojs-contrib-quality-levels": "4.1.0",
		"videojs-contrib-quality-menu": "^1.0.3",
		"videojs-hls-quality-selector": "2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.24.5",
		"@babel/preset-env": "^7.24.5",
		"@wordpress/babel-preset-default": "^7.41.0",
		"@wordpress/scripts": "^27.8.0",
		"ajv": "6.12.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^28.5.0",
		"jest": "^29.0.0",
		"npm-run-all": "^4.1.5",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4",
		"webpack-remove-empty-scripts": "^1.0.4"
	}
}
